<MainWidget>:
    BoxLayout:
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 170
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: 'app/image/logo.png'
                size_hint_y: None
                height: 150
                allow_stretch: True
                keep_ratio: True

            Label:
                id: temp
                text: 'Temperatura: --'
                color: 0, 0, 0, 1
            Label:
                id: pressao
                text: 'Press√£o: --'
                color: 0, 0, 0, 1
            Label:
                id: empuxo
                text: 'Empuxo: --'
                color: 0, 0, 0, 1

            BoxLayout: 
                size_hint_y: 1

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                size_hint_y: None
                height: 140
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                BoxLayout:
                    size_hint_x: 0.7

                Button:
                    background_normal: 'app/image/conexao.png'
                    size_hint_x: None
                    width: 100
                    allow_stretch: True
                    keep_ratio: True
                    on_press: app.on_image_click()

            BoxLayout:
                orientation: 'horizontal'
                
                Label:
                    text: 'grafico 1'
                    color: 0, 0, 0, 1
                Label:
                    text: 'grafico 2'
                    color: 0, 0, 0, 1
                Label:
                    text: 'grafico 3'
                    color: 0, 0, 0, 1
