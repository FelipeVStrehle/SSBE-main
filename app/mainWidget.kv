<MainWidget>:
    BoxLayout:
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 170
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: 'app/image/logo.png'
                size_hint_y: None
                height: 150
                allow_stretch: True
                keep_ratio: True

            Label:
                id: temp
                text: 'Temperatura: --'
                color: 0, 0, 0, 1
            Label:
                id: pressao
                text: 'Pressão: --'
                color: 0, 0, 0, 1
            Label:
                id: empuxo
                text: 'Empuxo: --'
                color: 0, 0, 0, 1

            BoxLayout: 
                size_hint_y: 1

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                size_hint_y: None
                height: 140
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                BoxLayout:
                    size_hint_x: 0.7

                Button:
                    background_normal: 'app/image/conexao.png'
                    size_hint_x: None
                    width: 100
                    allow_stretch: True
                    keep_ratio: True
                    on_press: app.on_image_click()

            BoxLayout:
                orientation: 'horizontal'
                padding: [25, 25, 25, 25]
                spacing: 25

                #Gráfico 1
                Graph:
                    id: grafico1
                    xmin: 0
                    xmax: 100
                    ymin: 0
                    ymax: 100
                    label_options: {'color': [0, 0, 0, 1], 'bold': True}
                    border_color: [0, 0, 0, 1]
                    tick_color: [0, 0, 0, 1]
                    size_hint: 0.3, 0.8
                    height: 200

                #Gráfico 2
                Graph:
                    id: grafico2
                    xmin: 0
                    xmax: 100
                    ymin: 0
                    ymax: 100
                    label_options: {'color': [0, 0, 0, 1], 'bold': True}
                    border_color: [0, 0, 0, 1]
                    tick_color: [0, 0, 0, 1]
                    size_hint: 0.3, 0.8
                    height: 200

                #Gráfico 3
                Graph:
                    id: grafico3
                    xmin: 0
                    xmax: 100
                    ymin: 0
                    ymax: 100
                    label_options: {'color': [0, 0, 0, 1], 'bold': True}
                    border_color: [0, 0, 0, 1]
                    tick_color: [0, 0, 0, 1]
                    size_hint: 0.3, 0.8
                    height: 200

